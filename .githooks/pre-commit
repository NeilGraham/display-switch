#!/bin/bash

# Pre-commit hook for display-switch
# Runs the same checks as CI to catch issues before committing

set -e

echo "ğŸ” Running pre-commit checks..."

# Check if we're in a Rust project
if [ ! -f "Cargo.toml" ]; then
    echo "âŒ Error: Not in a Rust project directory"
    exit 1
fi

# 1. Check formatting
echo "ğŸ“ Checking code formatting..."
if ! cargo fmt --all -- --check; then
    echo "âŒ Code formatting check failed!"
    echo "ğŸ’¡ Run 'cargo fmt --all' to fix formatting issues"
    exit 1
fi
echo "âœ… Code formatting is correct"

# 2. Run clippy
echo "ğŸ” Running clippy linter..."
if ! cargo clippy -- -D warnings; then
    echo "âŒ Clippy found issues!"
    echo "ğŸ’¡ Fix the clippy warnings above before committing"
    exit 1
fi
echo "âœ… Clippy checks passed"

# 3. Build the project
echo "ğŸ”¨ Building project..."
if ! cargo build --verbose; then
    echo "âŒ Build failed!"
    exit 1
fi
echo "âœ… Build successful"

# 4. Run tests
echo "ğŸ§ª Running tests..."
if ! cargo test --verbose; then
    echo "âŒ Tests failed!"
    exit 1
fi
echo "âœ… All tests passed"

echo "ğŸ‰ All pre-commit checks passed! Ready to commit." 